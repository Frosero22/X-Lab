<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardPaciente"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    card_view:cardElevation="1dp"
    android:layout_marginTop="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/colorItemPaciente"
    card_view:cardCornerRadius="20dp"
    card_view:cardUseCompatPadding="true">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_horizontal|top"
        android:background="@color/colorItemPaciente">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txvNumeroOrden"
            android:textSize="20dp"
            android:gravity="center"
            android:padding="5dp"
            android:textStyle="bold"

            android:layout_gravity="top"
            android:textColor="@color/colorWhite"
            android:background="@color/rojo_xuit"
            android:text="#Órden 2020"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvNombrePaciente"
            android:text="PEDRO JIMENEZ"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@android:color/transparent"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvIdentificacion"
            android:textSize="18dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            android:text="CI: 0928102466"
            />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvGenero"
            android:textSize="17dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textAlignment="center"

            android:background="@android:color/transparent"
            android:text="MASCULINO"
            />




        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnTomarAtencion"
            android:textSize="18dp"
            android:gravity="center"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="top"
            android:textColor="@color/rojo_xuit"
            android:background="@drawable/estilo_boton_transparente"
            android:text="TOMAR ATENCIÓN"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.cardview.widget.CardView>